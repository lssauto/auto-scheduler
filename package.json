{
  "name": "auto-scheduler",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest && tsc && vite build && eslint .",
    "test-utils": "jest --testNamePattern='utils'",
    "test-enums": "jest --testNamePattern='enums'",
    "test-tutors": "jest --testNamePattern='tutors'",
    "test-tables": "jest --testNamePattern='tables'",
    "test-schedulers": "jest --testNamePattern='schedulers'",
    "test-schedule": "jest --testNamePattern='schedule'",
    "test-rooms": "jest --testNamePattern='rooms'",
    "test-parsers": "jest --testNamePattern='parsers'",
    "test-events": "jest --testNamePattern='events'",
    "test-all": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "pre-commit": "^1.2.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended-type-checked",
      "plugin:@typescript-eslint/stylistic-type-checked"
    ],
    "rules": {
      "@typescript-eslint/semi": "error",
      "@typescript-eslint/naming-convention": "error",
      "@typescript-eslint/brace-style": "error",
      "@typescript-eslint/no-unnecessary-boolean-literal-compare": "error",
      "@typescript-eslint/no-redeclare": "error",
      "@typescript-eslint/quotes": "off",
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescript-eslint/prefer-for-of": "warn"
    }
  }
}
